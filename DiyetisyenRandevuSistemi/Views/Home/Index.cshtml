@{
    ViewData["Title"] = "Anasayfa";
}

<!-- Banner / Kahraman Alanı -->
<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold text-primary">Diyetisyen Kliniğimize Hoş Geldiniz</h1>
            <p class="lead">Sağlığınızı önemsiyoruz. Uzman diyetisyen kadromuz ve bilimsel yaklaşımlarla size özel hizmet sunuyoruz.</p>
            <a href="/Home/RandevuAl" class="btn btn-success btn-lg mt-3">Randevu Al</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/İmages/klinik-anasayfa.jpg" alt="Klinik Görseli" class="img-fluid rounded shadow">
        </div>
    </div>
</div>

<!-- Hizmetlerimiz Bölümü -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center text-secondary mb-4">Hizmetlerimiz</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Kilo Kontrolü</h5>
                        <p class="card-text">Kişiye özel beslenme planları ile sağlıklı kilo yönetimi.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Çocuk & Ergen Beslenmesi</h5>
                        <p class="card-text">Gelişim dönemine uygun sağlıklı beslenme alışkanlıkları.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Kronik Hastalıklarda Beslenme</h5>
                        <p class="card-text">Diyabet, tiroid gibi rahatsızlıklar için uzman destek.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hakkımızda Kısa Bölüm -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4">
                <img src="~/İmages/ekip.jpg" alt="Uzman Diyetisyenler" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h3 class="text-primary">Hakkımızda</h3>
                <p>Klinik olarak amacımız; danışanlarımızın sağlık hedeflerine ulaşmasını kolaylaştırmak ve kalıcı yaşam değişiklikleri için onlara rehberlik etmektir. Bilimsel verilere dayalı yaklaşımımızla, her bireyin ihtiyacına özel hizmet sunuyoruz.</p>
                <a href="/Home/KlinikHakkinda" class="btn btn-outline-primary mt-2">Daha Fazla Bilgi</a>
            </div>
        </div>
    </div>
</section>
