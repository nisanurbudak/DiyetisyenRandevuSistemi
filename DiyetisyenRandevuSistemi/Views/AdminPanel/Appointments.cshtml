@model IEnumerable<DiyetisyenRandevuSistemi.Models.Abonelik>
@{
    Layout = "_AdminPanelLayout";
    ViewData["Title"] = "Randevu Yönetimi";
}

<h2>Randevu Listesi</h2>

<a href="@Url.Action("AddAppointment")" class="btn btn-success mb-3">Yeni Randevu Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı</th>
            <th>Hekim</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.User?.Name/td>
                <td>@r.Hekim?.Adi</td>
                <td>@r.Baslangic.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@r.Bitis.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@r.Durum</td>
                <td>
                    <form method="post" asp-action="DeleteAppointment" asp-route-id="@r.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
