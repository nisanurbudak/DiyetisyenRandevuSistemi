<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli - @ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100 px-3">
        <a class="navbar-brand" href="#">Admin Paneli</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Sol Menü -->
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "AdminPanel")">Anasayfa</a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Users", "AdminPanel")">Kullanıcı Yönetimi</a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Appointments", "AdminPanel")">Randevu Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Statistics", "AdminPanel")">İstatistikler</a>
                </li>
            </ul>

            <!-- Sağ Menü -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <form method="post" action="@Url.Action("Logout", "Account")">
                        <button type="submit" class="btn btn-danger">Çıkış Yap</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <!-- İçerik -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-auto">
        &copy; 2025 Diyetisyen Randevu Sistemi
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)  
</body>
</html>


